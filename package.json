  "main": "src/index.ts",
  "scripts": {
    "prod": "pm2 start 'cross-env NODE_ENV=production node dist/index.ts' --name chat-back",
    "start": "cross-env NODE_ENV=production npm run build:live",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts",
    "json": "json-server --watch src/public/db.json --port 7777"
